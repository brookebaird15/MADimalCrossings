<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/villager_list_fragment">

    <fragment
        android:id="@+id/villager_list_fragment"
        android:name="com.ashleymccallum.madimalcrossing.VillagerListRecycler.VillagerRecyclerFragment"
        android:label="Villager List">
        <action
            android:id="@+id/show_villager_detail"
            app:destination="@id/villager_detail_fragment" />
    </fragment>
    <fragment
        android:id="@+id/villager_detail_fragment"
        android:name="com.ashleymccallum.madimalcrossing.VillagerListRecycler.VillagerDetailFragment"
        android:label="About the Villager"
        tools:layout="@layout/fragment_villager_detail">
        <argument
            android:name="item_id"
            android:defaultValue=""
            app:argType="string" />
    </fragment>
</navigation>